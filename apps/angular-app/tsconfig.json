{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "features/*": [
        "./src/app/features/*"
      ],
      "~shared/*": [
        "./src/app/shared/*"
      ],
      "@spartan-ng/ui-button-helm": [
        "./src/libs/ui/ui-button-helm/src/index.ts"
      ],
      "@spartan-ng/ui-card-helm": [
        "./src/libs/ui/ui-card-helm/src/index.ts"
      ],
      "@spartan-ng/ui-icon-helm": [
        "./src/libs/ui/ui-icon-helm/src/index.ts"
      ],
      "@spartan-ng/ui-table-helm": [
        "./src/libs/ui/ui-table-helm/src/index.ts"
      ],
      "@spartan-ng/ui-spinner-helm": [
        "./src/libs/ui/ui-spinner-helm/src/index.ts"
      ],
      "@spartan-ng/ui-dialog-helm": [
        "./src/libs/ui/ui-dialog-helm/src/index.ts"
      ],
      "@spartan-ng/ui-label-helm": [
        "./src/libs/ui/ui-label-helm/src/index.ts"
      ],
      "@spartan-ng/ui-input-helm": [
        "./src/libs/ui/ui-input-helm/src/index.ts"
      ],
      "@spartan-ng/ui-formfield-helm": [
        "./src/libs/ui/ui-formfield-helm/src/index.ts"
      ],
      "@spartan-ng/ui-select-helm": [
        "./src/libs/ui/ui-select-helm/src/index.ts"
      ],
      "@spartan-ng/ui-checkbox-helm": [
        "./src/libs/ui/ui-checkbox-helm/src/index.ts"
      ],
      "@spartan-ng/ui-progress-helm": [
        "./src/libs/ui/ui-progress-helm/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
